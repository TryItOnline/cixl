/*
  This file implements a basic number guessing game as a lambda iterator. Once Cixl
  is installed, the game may be started by executing "load '../examples/guess.cx'".

  https://github.com/basic-gongfu/cixl#getting-started
*/


(let: n rand 100; {
  ask 'Your guess: '
  
  % if {
    switch: g
      (< $n) (say 'Too low!'  $g)
      (> $n) (say 'Too high!' $g)
      #t     (say 'Correct!'  #nil);
  }
}) iter for &_