/*
  A number guessing game implemented as a lambda iterator.

  Once Cixl is installed, the game may be started by executing
  "load '../examples/guess.cx'".

  https://github.com/basic-gongfu/cixl#getting-started
*/

((let: n rand 100++; {
  ask 'Your guess: '
  
  %, $ if-else {
    let: c int <=> $n;

    switch:
      (($c = `<) say 'Too low!'  #t)
      (($c = `>) say 'Too high!' #t)
      (#t        say 'Correct!'  #nil);
  } {
    _ #nil
  }
}) for &_)